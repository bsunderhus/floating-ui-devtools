{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "floating-ui-devtools": ["../floating-ui-devtools/src/index.ts"],
      "@floating-ui-devtools/core": ["../core/src/index.ts"],
      "@floating-ui-devtools/tsconfig/*": ["../tsconfig/*"]
    }
  }
}
